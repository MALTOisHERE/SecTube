{
  "name": "cyber-stream-platform",
  "version": "1.0.0",
  "description": "A streaming platform for cybersecurity enthusiasts, bug hunters, and ethical hackers",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start"
  },
  "keywords": [
    "cybersecurity",
    "streaming",
    "bug-hunting",
    "ethical-hacking",
    "video-platform"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
